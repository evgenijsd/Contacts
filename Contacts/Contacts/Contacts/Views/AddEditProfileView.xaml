<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.AddEditProfileView" 
             Title="Add Profile">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="save.png"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="user.png" Margin="0,30,0,0" />
        <StackLayout Grid.Row="1" Padding="30,10">
            <Entry x:Name="nickEntry" Placeholder="NickName" />
            <Entry x:Name="nameEntry" Placeholder="Name" />
        </StackLayout>
        <Editor Grid.Row="2" HeightRequest="170" MaxLength="120" Placeholder="Description" BackgroundColor="LightGray" Margin="30,0,30,30" />
    </Grid>
</ContentPage>    