<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SignInView"
             Title="User SignIn">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Padding="20,0" VerticalOptions="Center">
            <Entry x:Name="usernameEntry" Placeholder="Login" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="true" />
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="SIGN IN" x:Name="buttonMain" BackgroundColor="#E65B30" Clicked="ButtonMain_Clicked"/>
            <Label Text="SIGN UP" x:Name="labelUP" TextColor="Blue" TextDecorations="Underline" HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>