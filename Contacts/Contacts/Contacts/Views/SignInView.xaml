<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SignInView"
             Title="User SignIn">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Padding="20,0" VerticalOptions="Center">
            <Entry Text="{Binding User.Login}" Placeholder="Login" />
            <Entry Text="{Binding User.Password}" Placeholder="Password" IsPassword="true" />
            <Label Text="{Binding IsActive}"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="SIGN IN" BackgroundColor="#E65B30" Command="{Binding MainListCommand}"/>
            <Label Text="SIGN UP" TextColor="Blue" TextDecorations="Underline" HorizontalOptions="Center" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignUpCommand}"/>
                </Label.GestureRecognizers>
            </Label>
            <Button Text="UserId = 10" Command="{Binding SetCommand}"/>
            <Label Text="{Binding UserId}"/>
        </StackLayout>
    </Grid>
</ContentPage>