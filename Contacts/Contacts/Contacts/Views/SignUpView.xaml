<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarinCode.Views.SignUpView" 
             Title="Users SignUp">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="5*"/>
			<RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Padding="20,0" VerticalOptions="Center">
            <Entry x:Name="usernameEntry" Placeholder="Login" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="true" />
            <Entry x:Name="passwordCEntry" Placeholder="Confirm Password" IsPassword="true" />
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="SIGN UP" BackgroundColor="#E65B30" Clicked="ButtonIn_ClickedAsync"/>
        </StackLayout>
    </Grid>
</ContentPage>


    