<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SignUpView"
             Title="User SignUp"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Padding="20,0" VerticalOptions="Center">
            <Entry Placeholder="Login" Text = "{Binding Login}" Style="{StaticResource EntryStyle}"/>
            <Entry Placeholder="Password" IsPassword="true" Text = "{Binding Password}" Style="{StaticResource EntryStyle}" />
            <Entry Placeholder="Confirm Password" IsPassword="true" Text = "{Binding ConfirmPassword}" Style="{StaticResource EntryStyle}" />
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="SIGN UP" Command="{Binding SignInCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>